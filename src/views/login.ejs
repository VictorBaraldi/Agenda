<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-2"></div>

            <h1 class="text-center">Entre ou criar conta</h1>
            <p class="text-center lead mb-4">Faça o login ou crie sua conta abaixo.</p>
            <div class="row justify-content-around my-3">

                <%- include('includes/messages') %>
                
                <div class="col-4">
                    <h4 class="text-center">Faça seu cadastro</h4> 
                    <p class="mb-4">Se você ainda não possui conta preencha o formulário abaixo:</p>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                        <div class="form-group my-2">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group my-3">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>
                </div>


                <div class="col-4">
                    <h4 class="text-center">Entrar no sistema</h4> 
                    <p class="mb-3">Se você já possui conta, faça login abaixo:</p>
                    <br>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                        <div class="form-group my-2">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group my-3">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary ">Entrar</button>
                      </form>
                </div>
            </div>

        <div class="col-lg-2"></div>

    </div>
</div>


<%- include('includes/footer') %>