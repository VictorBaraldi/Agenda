<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-2"></div>
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos est√£o abaixo</p>

            <%- include('includes/messages') %>

            <% if(contatos.length>0) {%>
            <div class="responsive-table">
                <table class="table my-2">
                    <% contatos.forEach(contato => { %>
                        <tr>
                            <td><%= contato.nome %></td>
                            <td><%= contato.sobrenome %></td>
                            <td><%= contato.telefone %></td>
                            <td><%= contato.email %></td>
                            <td><a href="/agenda/contato/<%= contato._id %>">Editar</a></td>
                            <td><a href="/agenda/contato/delete/<%= contato._id %>">Apagar</a></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
            <% } else {%>
            <h3 class="text-center ">Sem contatos na sua agenda</h3>
            <% }%>
        <div class="col-lg-2"></div>

    </div>
</div>


<%- include('includes/footer') %>